alter table Mascota 
change column razaMascora razaMascota varchar(15);

select nombreMascota,razaMascota from Mascota;

describe Cliente;
select cedulaCliente as 'Documento', direccionCliente as 'Direccion' from cliente;

describe Producto;
select nombreProducto as 'Producto', marca as 'marca del producto' from Producto;

describe Mascota;
select nombreMascota as 'Nombre', idMascota as 'Documento' from Mascota;

describe Vacuna;
select nombrevacuna as 'vacuna', dosisVacuna as 'dosis' from Vacuna;

/*select campo1 from nombre_tabla order by campo 2 ASC (ascendente) DESC (desecendente);*/

describe Cliente;
select cedulaCliente as 'Documento', idMascotaFK as 'codigo Mascota' from Cliente order by nombreCliente ASC;
describe producto;
select nombreProducto, marca from Producto order by precio ASC;

/*select campo1 from nombre_tabla WHERE campo_nume operador valos de la consulta*/

select nombreProducto from Producto WHERE precio >=1000 AND codigoProducto >2;
select enfermedad from detalleVacuna WHERE  codigoVacunaFK >1; 

/*operador logico AND y OR*/

select * from Vacuna;
select nombreVacuna from Vacuna WHERE enfermedad = 'Moquillo' OR dosisVacuna >=1;
select* from Mascota;
select nombreMascota from Mascota WHERE generoMascota = 'F' AND razaMascota = 'bull terrier';
select * from Cliente;
select apellidoCliente from Cliente WHERE idMascotaFK >1 OR nombreCliente = 'Danna';

/*Consulta con rangos BETWEEN*/
select nombreProducto from Producto WHERE precio BETWEEN 1000 AND 15000;

/*LIKE BO% (INICIO) %BO (FINAL) %BO% (CUALQUIER LADO)*/
select nombreProducto from Producto WHERE marca LIKE 'P%';

/*que no tenga NOT LIKE*/
select nombreProducto from Producto WHERE marca NOT LIKE 'a%';

select nombreCliente from Cliente WHERE apellidoCliente LIKE '%a%' or apellidoCliente LIKE '%s';
select codigoVacunaFK from Detallevacuna WHERE enfermedad LIKE 'm%' and enfermedad LIKE '%o%';
SELECT nombreMascota FROM Mascota WHERE razaMascota LIKE '%a%' AND generoMascota LIKE 'f%';
select codigoProducto from Producto WHERE nombreProducto LIKE '%t%';
select nombreVacuna from Vacuna WHERE enfermedad LIKE 'm%' or enfermedad LIKE '%e'; 

select cedulaCliente from Cliente WHERE nombreCliente NOT LIKE 'a%' and nombreCliente NOT LIKE '%n%';
select idMascotaFK from Detallevacuna WHERE enfermedad NOT LIKE '%a' OR enfermedad NOT LIKE 'R%';
select idMascota from Mascota WHERE nombreMascota NOT LIKE 'a%' and razaMascota NOT LIKE 'B%';
select precio from Producto WHERE nombreProducto NOT LIKE 'p%';
select codigoVacuna from Vacuna WHERE nombreVacuna NOT LIKE '%e%' OR enfermedad NOT LIKE 's%';
