/* consultar cliente de maxima venta hecha*/
select c.nombreCliente, v.totalCompra, pv.total 
from Venta v
inner join Cliente c on c.idCliente = v.idClienteFK
inner join ProducVenta pv on v.idVenta = pv.idVentaFK
where v.totalCompra = (select max(totalCompra) from Venta);


/* Arreglar la tabla product venta para que esta sentencia funcione cliente de maxima venta hecha*/
select c.nombreCliente, v.totalCompra, pv.Total 
from Venta v
inner join Cliente c on c.idCliente = v.idClienteFK
inner join ProducVenta pv on v.numOrdenFK = pv.numOrdenFK
where v.totalCompra = (select max(totalCompra) from Venta);

/*Consultar usuario y cliente de una venta especifica*/

select v.idVenta, v.numOrdenFK, u.nombreUsuario, u.apellidoUsuario, c.nombreCliente, c.apellidoCliente
from Venta v
inner join Usuario u on v.idUsuarioFK = u.idUsuario
inner join Cliente c on v.idClienteFK = c.idCliente
where v.numOrdenFK = '18';


/*Consultar los productos que compr√≥ un cliente especifico*/
select c.nombreCliente, p.nombreProducto, pv.Cantidad, pv.Total
from Cliente c
inner join Venta v on c.idCliente = v.idClienteFK
inner join ProducVenta pv on v.numOrdenFK = pv.numOrdenFK
inner join Producto p on pv.CodBarras = p.CodBarras
WHERE c.idCliente = 100;

/*Consultar todos los clientes que han hecho compras/ventas*/
select c.idCliente, c.nombreCliente, c.apellidoCliente, c.cedulaCliente, c.direccionCliente, c.telefonoCliente
from  Cliente c
inner join Venta v on c.idCliente = v.idClienteFK;

